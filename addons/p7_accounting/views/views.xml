<odoo>
  <data>
    <record id="account_move_inherit" model="ir.ui.view">
      <field name="name">account move inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header/field[@name='state']" position="replace">
          <field name="state" widget="statusbar" statusbar_visible="draft,approve,posted" />
        </xpath>

        <xpath expr="//button[@name='action_post']" position="after">
            <button name="send_approval" type="object" class="btn btn-primary" string="Send for approval" invisible="(state != 'draft' or move_type == 'entry')" />
            <button name="action_approve" type="object" class="btn btn-primary" string="Approve" invisible="(state != 'approve' or move_type == 'entry' )" groups="p7_accounting.group_approve_bill" />
            <button name="action_reject" type="object" class="btn btn-secondary" string="Reject" invisible="(state != 'approve' or move_type == 'entry' )" groups="p7_accounting.group_approve_bill" />
        </xpath>
        <xpath expr="//button[@name='action_post'][2]" position="replace"> 
          <button name="action_post" string="Confirm" class="oe_highlight" type="object" groups="account.group_account_invoice" data-hotkey="v" context="{'validate_analytic': True}" invisible="True" />
        </xpath>
      </field>
    </record>
    
  </data> 
</odoo>
