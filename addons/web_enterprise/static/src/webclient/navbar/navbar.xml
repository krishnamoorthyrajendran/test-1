<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="web_enterprise.EnterpriseNavBar" t-inherit="web.NavBar" t-inherit-mode="primary">
    <xpath expr="//nav" position="attributes">
        <attribute name="t-ref">nav</attribute>
    </xpath>

    <xpath expr="//t[@t-call='web.NavBar.AppsMenu']" position="replace">


        <!-- Waka Tech Toogle -->
        <!--  -->
        <div class="sidebar" style="display:none;background-color: #1c75bc;border:none;width:12%" id="mySidebar"  onmouseleave="sidebar_close()">
            <button onclick="sidebar_close()" style="background-color: #1c75bc;border:none;width:12%">
                <img src="/web_enterprise/static/wakatech/finallogo.svg" alt="WAKA TECH" class="center" width="200"/>
            </button>
            <div class="sidebar_text" id="menuItems"></div>
        </div>

        <div style="height:1000px;background-color: #1c75bc" >
            <button  style="background-color: #1c75bc;border:None">
                <img src="/web_enterprise/static/wakatech/wakasmall.svg" alt="WAKA TECH" style="width:35px;" onmouseover="sidebar_open()"/>
            </button>
            <div id="logoContainer" style="margin-top: 10px;"></div> <!-- Container for dynamically added logos -->

        </div>

        <!-- End of Waka Tech Toogle -->
        <div style="width:50px"></div>

        <a href="#" style="display:none !important;" class="o_menu_toggle" t-att-class="{'hasImage': currentApp &amp;&amp; currentApp.webIconData}" accesskey="h" t-ref="menuApps" t-on-click.prevent="() => this.hm.toggle()">
            <svg style="display:none !important;" class="o_menu_toggle_icon" width="14px" height="14px" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg">
                <g t-foreach="[0, 5, 10]" t-as="Y" t-att-id="'o_menu_toggle_row_' + Y_index" fill="currentColor" t-key="'o_menu_toggle_row_' + Y_index">
                    <rect t-foreach="[0, 5, 10]" t-as="X" width="3" height="3" t-att-x="X" t-att-y="Y" t-key="'o_menu_toggle_cell_' + X_index"/>
                </g>
            </svg>

            <img
                t-if="currentApp &amp;&amp; currentApp.webIconData"
                t-att-src="currentApp.webIconData"
                class="o_menu_brand_icon d-none d-lg-inline position-absolute start-0 h-100 ps-1 ms-2"
                t-att-alt="currentApp.name"
                t-ref="appIcon"
                style="display:none !important;"/>

            <span
                t-if="currentApp and currentApp.name != 'Accounting'"
                t-esc="currentApp.name"
                class="o_menu_brand d-none d-md-flex ms-3 pe-0"/>
        </a>
    </xpath>

    <xpath expr="//DropdownItem[@t-esc='currentApp.name']" position="replace"/>
</t>

<t t-name="web_enterprise.EnterpriseNavBar.SectionsMenu" t-inherit="web.NavBar.SectionsMenu" t-inherit-mode="extension">
    <xpath expr="//MenuDropdown" position="attributes">
        <attribute name="togglerClass" add="'fw-normal'"/>
    </xpath>

</t>

</templates>
