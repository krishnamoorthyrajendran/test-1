<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Reconfigured cheque related action buttons views -->
    <record id="view_account_payment_form_inh" model="ir.ui.view">
        <field name="name">account.payment.view.form.inherit.odoo.print.cheque</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_check_printing.view_account_payment_form_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='print_checks']" position="attributes">
                <!-- Remove the existing invisible conditions -->
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
