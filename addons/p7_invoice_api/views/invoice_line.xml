<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Customer Invoice Form View -->
    <record id="view_move_form_invoice_api" model="ir.ui.view">
        <field name="name">account.move.form.invoices</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree" position="inside">
               
                <field name="negotiated_rate"  optional="hide" />
                <field name="service_qty"  optional="hide" />
                <field name="sb_id"  optional="hide" />
                <field name="hbl_number"  optional="hide" />
                <field name="shipment_mode"  optional="hide" />
                <field name="movement_id"  optional="hide" />
                <!-- <field name="charge_item_id"  optional="hide" required="1" />
                <field name="charge_item"  optional="hide" /> -->
                <field name="currency_id"  optional="hide" />
                <field name="std_charge"  optional="hide" />                
                <field name="exp_charge"  optional="hide" />
                <field name="tax"  optional="hide" />
                <field name="gst"  optional="hide" />
                <field name="pst"  optional="hide" />
                <field name="min_chargable_unit"  optional="hide" />
                <field name="min_base_charge"  optional="hide" />
                <field name="unit_rate"  optional="hide" />
                <field name="rendering_period"  optional="hide" />
                <field name="eff_from_date"  optional="hide" widget="datetime" />
                <field name="eff_to_date"  optional="hide" widget="datetime" />
                <field name="notify_status"  optional="hide" />
                <field name="service_name_id"  optional="hide" />
                <field name="service_name"  optional="hide" />
                <field name="origin_port_id"  optional="hide" />
                <field name="dest_port_id"  optional="hide" />
                <field name="amount"  optional="hide" />
                <field name="processed_qty"  optional="hide" />
                <field name="final_amount"  optional="hide" />
                <field name="billing_currency"  optional="hide" />
                <field name="exchange_rate"  optional="hide"  />                
                <field name="comission_tax"  optional="hide" />


            </xpath>
        </field>
    </record>
</odoo>
