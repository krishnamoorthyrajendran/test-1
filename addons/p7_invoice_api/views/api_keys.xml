<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="api_key_list">
      <field name="name">api.key.list</field>
      <field name="model">api.keys.config</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"  required='1'/>
          <field name="secret_key"  required='1'/>
        </tree>
      </field>
    </record>

    <record id="api_key_form" model="ir.ui.view">
      <field name="name">api.key.form</field>
      <field name="model">api.keys.config</field>
      <field name="arch" type="xml">
          <form name="shipping_info">
              <sheet>
                <group>
                  <group>
                    <field name="name"  required='1'/>
                    <field name="secret_key"  force_save="1" required='1'/>
                  </group>
                </group>
              </sheet>
          </form>
      </field>
    </record>

    <!-- server action to the one above -->

      <record id="api_key_action" model="ir.actions.act_window">
        <field name="name">API Keys</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.keys.config</field>
        <field name="view_mode">tree,form</field>
      </record>

    <menuitem id="menu_api_key_conf" name="API Keys" action="api_key_action" parent="base.menu_users" sequence="56"/>

  </data>
</odoo>
